$('#flash-messages-container').html("<%=j render partial: 'partials/flash_messages' %>")

<% if @post.persisted? %>
  $('#posts').prepend("<%=j render partial: 'posts/post', locals: { post: @post, topic: @topic } %>")
  $('#new_post').html("<%=j render partial: 'posts/form', locals: { post: @new_post, topic: @topic } %>")
<% end %>
