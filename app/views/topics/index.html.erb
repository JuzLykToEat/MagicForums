<div class="topics">
  <div class="grid text-center">
    <h1 class="main-title">Topics</h1>
    <% @topics.each do |topic| %>
      <div class="topic">
        <h3 class="main-text"><%= topic.title %></h3>
        <h5><%= topic.description %></h5>
        <%= link_to topic.title, topic_path(topic) %>
      </div>
    <% end %>
  </div>
</div>
